<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        .btn-group a {
            text-decoration: none;
            color: white;
        }

        .btn-logOut {
            width: 155px;
            color: #ffffff;
            border-radius: 15px;
            border: solid;
            border-color: darkorange;
            text-align: center;
            padding: 5px 20px;
            font-size: 16px;
        }

        .btn-logOut:hover {
            background-color: darkorange;
        }
    </style>
</head>

<body class="bg-black text-light">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black p-2 sticky-top">
        <div class="container">
            <a href="/Home" class="text-decoration-none">
                <h1 class="text-uppercase border-bottom border-2 border-warning">
                    <span class="text-warning" style="font-weight:800; margin-right:-18px;">Staff</span>
                    <span class="text-white" style="font-weight:100; font-size:30px">Side</span>
                </h1>
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between px-5">
                <ul class="navbar-nav flex-grow-1">
                    <li class="px-2">@Html.ActionLink("Đơn mới", "DonMoi", "Staff", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="px-2">@Html.ActionLink("Đang xử lý", "XuLy", "Staff", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="px-2">@Html.ActionLink("Đang giao", "DangGiao", "Staff", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="px-2">@Html.ActionLink("Hoàn thành", "HoanThanh", "Staff", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="px-2">@Html.ActionLink("Thống kê", "ThongKe", "Staff", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>

            @if (Session["hoTen"] != null)
            {
                <div style="float: right;">
                    Hello @Session["hoTen"]!
                    <a href="@Url.Action("Logout", "Account")" class="btn-logOut text-decoration-none">Đăng Xuất</a>
                </div>
            }
        </div>
    </nav>

    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <span class="text-secondary">Một ngày làm việc tích cực nhé!</span>
        </footer>
    </div>

    <div class="text-end sticky-bottom">
        <a class="text-decoration-none text-warning" style="font-size:50px;" href="#"><i class="bi bi-arrow-up-circle-fill"></i></a>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
